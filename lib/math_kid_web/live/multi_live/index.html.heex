<%= if is_nil(@player) do %>
  <%= if !Enum.member?(@connected, "player1") do %>
  <button phx-click="player" phx-value-player="player1">Player 1</button>
  <%end%>
  <%= if !Enum.member?(@connected, "player2") do %>
  <button phx-click="player" phx-value-player="player2">Player 2</button>
  <%end%>
<%end%>
